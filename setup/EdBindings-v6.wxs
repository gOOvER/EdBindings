<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package Id="*" 
           Name="EdBindings" 
           Language="1033" 
           Version="$(var.Version)" 
           Manufacturer="Elite Dangerous Community"
           UpgradeCode="{12345678-1234-1234-1234-123456789012}"
           InstallerVersion="500" 
           Compressed="yes">

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <!-- UI -->
    <ui:WixUI Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <!-- Installation directory -->
    <StandardDirectory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="EdBindings">
        <Directory Id="DeviceMappingsFolder" Name="DeviceMappings" />
      </Directory>
    </StandardDirectory>

    <!-- Components -->
    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="MainApplication" Guid="{87654321-4321-4321-4321-210987654321}">
        <File Id="EdBindingsExe" Source="$(var.SourceDir)\EdBindings.exe" />
        <File Id="EdBindingsConfig" Source="$(var.SourceDir)\EdBindings.dll.config" />
        <File Id="EdBindingsDll" Source="$(var.SourceDir)\EdBindings.dll" />
        <File Id="EdBindingsModelDll" Source="$(var.SourceDir)\EdBindings.Model.dll" />
        <File Id="EdBindingsPdb" Source="$(var.SourceDir)\EdBindings.pdb" />
        <File Id="EdBindingsModelPdb" Source="$(var.SourceDir)\EdBindings.Model.pdb" />
        <File Id="EdBindingsRuntimeConfig" Source="$(var.SourceDir)\EdBindings.runtimeconfig.json" />
        <File Id="EdBindingsDeps" Source="$(var.SourceDir)\EdBindings.deps.json" />
        <File Id="ActionMappingsJson" Source="$(var.SourceDir)\ActionMappings.json" />
      </Component>

      <!-- WPF Runtime Files -->
      <Component Id="WpfRuntimeFiles" Guid="{11111111-2222-3333-4444-555555555555}">
        <File Id="MicrosoftWin32SystemEventsFile" Source="$(var.SourceDir)\Microsoft.Win32.SystemEvents.dll" />
        <File Id="SystemDrawingCommonFile" Source="$(var.SourceDir)\System.Drawing.Common.dll" />
        <File Id="SystemSecurityPermissionsFile" Source="$(var.SourceDir)\System.Security.Permissions.dll" />
        <File Id="SystemWindowsExtensionsFile" Source="$(var.SourceDir)\System.Windows.Extensions.dll" />
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="DeviceMappingsFolder">
      <Component Id="DeviceMappings" Guid="{22222222-3333-4444-5555-666666666666}">
        <File Id="X56Json" Source="$(var.SourceDir)\DeviceMappings\X56.json" />
      </Component>
    </DirectoryRef>

    <!-- Start Menu Shortcut -->
    <StandardDirectory Id="ProgramMenuFolder">
      <Component Id="StartMenuShortcut" Guid="{33333333-4444-5555-6666-777777777777}">
        <Shortcut Id="EdBindingsStartMenuShortcut"
                  Name="EdBindings"
                  Target="[INSTALLFOLDER]EdBindings.exe"
                  WorkingDirectory="INSTALLFOLDER" />
        <RemoveFolder Id="RemoveStartMenuFolder" On="uninstall" />
        <RegistryValue Root="HKCU" Key="Software\EdBindings" Name="installed" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </StandardDirectory>

    <!-- Desktop Shortcut -->
    <StandardDirectory Id="DesktopFolder">
      <Component Id="DesktopShortcut" Guid="{44444444-5555-6666-7777-888888888888}">
        <Shortcut Id="EdBindingsDesktopShortcut"
                  Name="EdBindings"
                  Target="[INSTALLFOLDER]EdBindings.exe"
                  WorkingDirectory="INSTALLFOLDER" />
        <RegistryValue Root="HKCU" Key="Software\EdBindings" Name="desktopShortcut" Type="integer" Value="1" KeyPath="yes"/>
      </Component>
    </StandardDirectory>

    <!-- Feature -->
    <Feature Id="Complete" Title="EdBindings" Level="1">
      <ComponentRef Id="MainApplication" />
      <ComponentRef Id="WpfRuntimeFiles" />
      <ComponentRef Id="DeviceMappings" />
      <ComponentRef Id="StartMenuShortcut" />
      <ComponentRef Id="DesktopShortcut" />
    </Feature>
    
    <!-- Branding -->
    <Property Id="ARPHELPLINK" Value="https://github.com/gOOvER/EdBindings" />
    <Property Id="ARPURLINFOABOUT" Value="https://github.com/gOOvER/EdBindings" />
  </Package>
</Wix>